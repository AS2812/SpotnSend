# PostgreSQL connection
DATABASE_URL=postgres://postgres:postgres@localhost:5432/civic_watch
POOL_MAX=10
POOL_IDLE_TIMEOUT=10000

# JWT secrets
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Password hashing
BCRYPT_ROUNDS=12

# Server config
PORT=8080
APP_URL=http://localhost:8080
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:8081

# File storage (replace with actual provider credentials)
UPLOADS_BASE_PATH=./uploads

# Notification services
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMS_PROVIDER_API_KEY=

